@model ACP.ViewModels.DetailsClienteViewModel

@{
    ViewData["Title"] = "Detalles del Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ajusta esto según el layout que estés utilizando
}

<h2>@ViewData["Title"]</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre Completo
        </dt>
        <dd class="col-sm-10">
            @Model.Nombre
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Teléfono
        </dt>
        <dd class="col-sm-10">
            @Model.Telefono
        </dd>
        <dt class="col-sm-2">
            Vehículos
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var vehiculo in Model.Vehiculos)
                {
                    <li>@vehiculo.Placa | @vehiculo.Referencia | @vehiculo.Color</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div class="d-flex gap-3">
    <a class="btn btn-warning disabled" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    <a class="btn btn-secondary" asp-action="Index">Regresar a la Lista</a>
</div>

